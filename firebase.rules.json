{
  "rules": {
    "orgs": {
      "$org": {
        ".read": "auth.token.email.replace('.', '_').endsWith($org) && auth.token.email_verified == true",
        ".write": "auth.token.email.replace('.', '_').endsWith($org) && auth.token.email_verified == true",
        "groups": {
          "$group": {
            ".indexOn": ["members"]
          }
        }
      }
    }
  }
}

