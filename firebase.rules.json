{
  "rules": {
    "tasks": {
      "$uid": {
        ".read": "auth !== null && auth.uid === $uid",
        ".write": "auth !== null && auth.uid === $uid"
      }
    },
    "orgs": {
      "$org": {
        ".read":
          "auth.token.email.replace('.', '_').endsWith($org) && auth.token.email_verified == true",
        ".write":
          "auth.token.email.replace('.', '_').endsWith($org) && auth.token.email_verified == true",
        "groups": {
          "$group": {
            "userIds": {
              "$userId": {
                ".write": "$userId === auth.uid"
              }
            }
          }
        },
        "users": {
          "$userId": {
            ".write": "$userId === auth.uid",
            "groupIds": {
              ".read": "$userId === auth.uid"
            }
          }
        }
      }
    }
  }
}
