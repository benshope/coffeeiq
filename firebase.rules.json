{
  "rules": {
    "orgs": {
      "$org": {
        ".read":
          "auth != null &&  (auth.token.email.split('.').join('_').endsWith($org) && auth.token.email_verified == true || auth.uid === 'nFtN8V7w4JdUqMRS2CqW14GwMIv2')",
        ".write":
          "auth != null &&  (auth.token.email.split('.').join('_').endsWith($org) && auth.token.email_verified == true  || auth.uid === 'nFtN8V7w4JdUqMRS2CqW14GwMIv2')",
        "groups": {
          "$group": {
            "userIds": {
              "$userId": {
                ".write": "$userId === auth.uid  || auth.uid === 'nFtN8V7w4JdUqMRS2CqW14GwMIv2'"
              }
            }
          }
        },
        "users": {
          "$userId": {
            ".write": "$userId === auth.uid  || auth.uid === 'nFtN8V7w4JdUqMRS2CqW14GwMIv2'",
            "groupIds": {
              ".read": "$userId === auth.uid  || auth.uid === 'nFtN8V7w4JdUqMRS2CqW14GwMIv2'"
            }
          }
        }
      }
    }
  }
}
