{
  "rules": {
    "orgs": {
      "$org": {
        ".read":
          "auth != null && auth.token.email.split('.').join('_').endsWith($org)",
        ".write":
          "auth != null && auth.token.email.split('.').join('_').endsWith($org)",
        "groups": {
          "$group": {
            "userIds": {
              "$userId": {
                ".write": "$userId === auth.uid "
              }
            }
          }
        },
        "users": {
          "$userId": {
            ".write": "$userId === auth.uid ",
            "groupIds": {
              ".read": "$userId === auth.uid "
            }
          }
        }
      }
    }
  }
}
